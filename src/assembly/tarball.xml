<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>storm-info-provider</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/storm-info-provider</directory>
			<outputDirectory>${installation_directory}
			</outputDirectory>
			<includes>
				<include>storm-info-provider</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
		
		<fileSet>
			<directory>src/storm-info-provider</directory>
			<outputDirectory>${installation_directory}
			</outputDirectory>
			<includes>
				<include>*.py</include>
			</includes>
			<fileMode>0644</fileMode>
		</fileSet>
		
		<fileSet>
			<directory>.</directory>
			<outputDirectory>${doc_installation_prefix}/${artifactId}-${version}
			</outputDirectory>
			<includes>
				<include>LICENSE.txt</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>